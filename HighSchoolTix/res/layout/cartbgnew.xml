<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal" >
    <RelativeLayout   android:id="@+id/top"  android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/eventlayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
<TextView 
    android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
    android:id="@+id/eventname"
    android:layout_alignParentLeft="true"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:lines="2"
    android:textSize="12sp"
    android:textColor="#000000"
    android:textStyle="bold"
    android:text="Bollywall tournament"/>
<TextView 

     android:paddingLeft="10dp"
    android:id="@+id/datetime"
    android:layout_alignParentLeft="true"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:lines="2"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="Bollywall tournament"/>

</LinearLayout>
<LinearLayout android:layout_toRightOf="@+id/eventlayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:orientation="vertical">
    <LinearLayout android:layout_width="wrap_content" android:layout_gravity="right" android:layout_height="wrap_content" android:orientation="horizontal" >
<TextView 
    android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
    android:id="@+id/ticket_price"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="5.7"/>
<TextView 
    android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
    android:id="@+id/quntity"
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="10"/>
<TextView 
        android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
     android:layout_marginRight="10dp"
    android:id="@+id/ticketamount"
    android:gravity="right"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="$56:00"/>
</LinearLayout>
    <LinearLayout  android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
<TextView 
    android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
    android:id="@+id/fee"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="0.99"/>
<TextView 
    android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
    android:id="@+id/fee_quntity"
    android:layout_width="30dp"
 
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="10"/>
<TextView 
        android:layout_marginTop="10dp"
     android:paddingLeft="10dp"
     android:layout_marginRight="10dp"
    android:id="@+id/total_fee"
    android:layout_width="60dp"
     android:gravity="right"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="$56:00"/>
</LinearLayout>
</LinearLayout>

</RelativeLayout>
<View android:id="@+id/vi" 
      android:layout_below="@+id/top"
    android:layout_width="100dp"
    android:layout_alignParentRight="true"
    android:layout_height="2dp"
    android:background="#000000"/>
<LinearLayout 
    android:layout_alignParentRight="true"
     android:paddingLeft="10dp"
     android:id="@+id/sum"
     android:layout_below="@+id/vi"
     android:layout_width="wrap_content" 
     android:layout_height="wrap_content" 
    android:orientation="horizontal">
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#000000"
    android:text="Total = "/>
<TextView 
    android:id="@+id/total"
    android:layout_marginRight="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:text="$250"/>
</LinearLayout>
<View android:layout_width="fill_parent"
    android:layout_height="2dp"
   android:layout_below="@+id/sum"
    android:background="#000000"/>
</RelativeLayout>